<div class="page-header">
  <div class="pull-right">
    <%= link_to "New Person", new_person_path, class: "pull-right btn btn-info" %>
  </div>
  <h1>Staff</h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Locations</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
    <tr>
      <td>
        <%= link_to person.full_name, person_path(person) %>
      </td>
      <td> <%= person.assignments.count %></td>
      <td class="pull-right">
        <%= link_to "Delete", person_path(person), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
